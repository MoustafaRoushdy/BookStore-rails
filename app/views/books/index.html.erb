<h1>Books</h1>
<button><%= link_to "Create", new_book_path  %></button>
<ul>
    <% @books.each do |book| %>
        <li>
             <%= book.name  %> <br>
             price:<%= book.price  %> <br>
             description:<%= book.description  %> <br>
             creator:<%= link_to book.admin.name , book.admin %> <br>
             <button><%= link_to 'Delete',book_path(book),data:{
             turbo_method: :delete , 
             turbo_confirm: "Are you sure you want to delete this book"
             }%></button>
             <Button><%= link_to 'Edit', edit_book_path(book) %></Button>
        </li>
    <% end %>
</ul>