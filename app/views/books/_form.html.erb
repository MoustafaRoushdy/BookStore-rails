<%= form_with model: book do |form| %>
<div>
    <%= form.label :name %> <br>
    <%= form.text_field :name %> <br>
    <% book.errors.full_messages_for(:name).each  do |message| %>
    <div><%= message %></div>
    <% end %>
</div>

<div>
    <%= form.label :price %> <br>
    <%= form.text_field :price %> <br>
     <% book.errors.full_messages_for(:price).each  do |message| %>
    <div><%= message %></div>
    <% end %>
</div>

<div>
    <%= form.label :description %> <br>
    <%= form.text_field :description %> <br>
     <% book.errors.full_messages_for(:description).each  do |message| %>
    <div><%= message %></div>
    <% end %>
</div>

<div>
    <%= form.label :admin_id %> <br>
    <%= form.number_field :admin_id %> <br>
     <% book.errors.full_messages_for(:admin_id).each  do |message| %>
    <div><%= message %></div>
    <% end %>
</div>

<div>
    <%= form.submit %>
</div>

<% end%>